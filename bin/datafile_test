#!/bin/sh
#
# Test run for making two datafiles and generating a HTML from them.
#
mkdir -p $WORKDIR/test/vp8
mkdir -p $WORKDIR/test/h263

set -e

if [ -z $WORKDIR ]; then
  echo "WORKDIR not set"
  exit 1
fi
cd $WORKDIR

make_datafile --codec vp8 --config 4795a682e239 --vary=rate vpx_codec_comparison/mpeg_video/RaceHorses_832x480_30.yuv | sort -n > $WORKDIR/test/vp8/testfile.txt
make_datafile --codec h263 --config d41d8cd98f00 --vary=rate vpx_codec_comparison/mpeg_video/RaceHorses_832x480_30.yuv | sort -n > $WORKDIR/test/h263/testfile.txt

$WORKDIR/lib/visual_metrics.py $WORKDIR/lib/metrics_template.html testfile.txt $WORKDIR/test/vp8 $WORKDIR/test/h263 > $WORKDIR/test/metrics.html



